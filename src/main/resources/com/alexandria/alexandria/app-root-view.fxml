<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="root" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alexandria.alexandria.AlexandriaController">
    <stylesheets>
        <URL value="@css/jfoenix-component.css" />
        <URL value="@css/jfoenix-app.css" />
    </stylesheets>
    <VBox id="navMenu" alignment="TOP_CENTER" maxWidth="150.0" minWidth="120.0" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <JFXButton fx:id="buttonLibrary" maxHeight="1.7976931348623157E308" maxWidth="125.0" styleClass="custom-jfx-button-raised" text="Library">
            <stylesheets>
                <URL value="@css/jfoenix-app.css" />
                <URL value="@css/jfoenix-component.css" />
            </stylesheets>
        <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
        </VBox.margin>
        </JFXButton>
        <JFXButton fx:id="buttonAdd" maxHeight="1.7976931348623157E308" maxWidth="125.0" onAction="#onAddClick" styleClass="custom-jfx-button-raised" text="Add Book">
           <VBox.margin>
               <Insets bottom="10.0" top="10.0" />
           </VBox.margin>
        </JFXButton>
      <JFXButton fx:id="buttonRawFileView" maxHeight="1.7976931348623157E308" maxWidth="125.0" onAction="#onRawClick" styleClass="custom-jfx-button-raised" text="View Raw File">
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </JFXButton>
    </VBox>
    <VBox id="main" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS">
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
      <children>
         <GridPane VBox.vgrow="ALWAYS">
           <columnConstraints>
             <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
           </columnConstraints>
           <rowConstraints>
             <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
           </rowConstraints>
            <children>
               <TextArea prefHeight="200.0" prefWidth="200.0" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS" />
            </children>
         </GridPane>
      </children>
    </VBox>
</HBox>
